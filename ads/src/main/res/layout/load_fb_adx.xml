<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_container"
    android:visibility="gone"
    android:background="@drawable/bg_card_ads"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_native_ads"
    app:shimmer_auto_start="true"
    app:shimmer_base_color="#ccc">
    <RelativeLayout
        android:padding="5dip"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="5dip"
            android:paddingBottom="5.0dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:clickable="false"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:clickable="false"
                    android:id="@+id/native_ad_icon_load"
                    android:layout_width="35.0dip"
                    android:layout_height="35.0dip"
                    android:background="@color/light_transparent"
                    />
                <LinearLayout
                    android:layout_marginLeft="10dip"
                    android:background="@color/light_transparent"
                    android:clickable="false"
                    android:orientation="vertical"
                    android:paddingLeft="5.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ad_choices_container_load"
                    android:layout_toRightOf="@+id/native_ad_icon_load">
                    <TextView
                        android:clickable="false"
                        android:textSize="15.0sp"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:clickable="false"
                        android:textSize="12.0sp"
                        android:textColor="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:id="@+id/ad_choices_container_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <ImageView
                android:clickable="false"
                android:gravity="center"
                android:background="@color/light_transparent"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"/>
            <RelativeLayout
                android:paddingRight="10dip"
                android:paddingLeft="10dip"
                android:orientation="horizontal"
                android:padding="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:clickable="false"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_transparent">
                    <TextView

                        android:clickable="false"
                        android:textSize="12.0sp"
                        android:textColor="@android:color/black"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        />
                    <TextView
                        android:clickable="false"
                        android:textSize="12.0sp"
                        android:textColor="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"/>
                </LinearLayout>


            </RelativeLayout>
            <Button
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="13.0sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_vertical"
                android:background="@color/light_transparent"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            style="@style/AppTheme.Ads"
            />

    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
