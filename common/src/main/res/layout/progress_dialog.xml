<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/backgroundProgress"
    android:elevation="4dp"
    android:gravity="center">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/_48sdp"
      android:background="@drawable/bg_progress_dialog"
      android:paddingVertical="@dimen/_20sdp"
      android:paddingHorizontal="@dimen/_16sdp"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ProgressBar
        android:layout_width="@dimen/_26sdp"
        android:layout_height="@dimen/_26sdp"
        android:indeterminate="true"
        android:theme="@style/AppTheme.Custom.Progress"
        />

    <TextView
        style="@style/styleDrawerHeaderProDesc"
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:gravity="center"
        android:text="Loading"
        android:textSize="@dimen/text_size14"
        android:textColor="@color/colorButtonDisable"
        />
  </LinearLayout>

</LinearLayout>