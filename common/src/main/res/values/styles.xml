<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorAccent</item>
    <item name="colorSecondaryVariant">@color/colorAccentDark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <!-- App Font -->
    <item name="fontFamily">@font/roboto_light</item>

    <item name="android:windowContentTransitions">true</item>

    <item name="android:windowActionBarOverlay">true</item>
  </style>

  <style name="TextBoldFont">
    <item name="android:textSize">@dimen/text_size16</item>
    <item name="android:textStyle">bold</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <style name="TextMediumFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_medium</item>
  </style>

  <style name="TextRegularFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>

  <style name="CustomDialogAnimation" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="android:windowActivityTransitions">true</item>
  </style>
  <style name="TutorialTitleFont">
    <item name="android:textSize">@dimen/tutorial_title</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <style name="TutorialContentFont">
    <item name="android:textSize">@dimen/tutorial_content</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>

  <style name="ChooserDialogBoldFont">
    <item name="android:textSize">@dimen/text_size16</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <style name="ChooserDialogRegularFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>

  <style name="ChooserDialogAnimation" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorDarkGray</item>
    <item name="colorPrimary">@color/colorGray</item>

    <item name="android:windowActivityTransitions">true</item>
  </style>

  <style name="PrettyDialogBoldFont">
    <item name="android:textSize">@dimen/text_size16</item>
    <item name="fontFamily">@font/roboto_bold</item>
  </style>

  <style name="PrettyDialogRegularFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>

  <style name="PrettyDialogAnimation" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorDarkGray</item>
    <item name="colorPrimary">@color/colorGray</item>

    <item name="android:windowActivityTransitions">true</item>
  </style>

  <style name="Text400">
    <item name="fontWeight">400</item>
    <item name="android:fontWeight" tools:ignore="NewApi">400</item>
    <item name="android:textFontWeight" tools:targetApi="p">400</item>
  </style>
  <style name="Text500">
    <item name="fontWeight">500</item>
    <item name="android:fontWeight" tools:ignore="NewApi">500</item>
    <item name="android:textFontWeight" tools:targetApi="p">500</item>
  </style>

  <style name="style_button_back" parent="@style/Widget.AppCompat.ImageButton">
    <item name="android:layout_width">@dimen/dimen45</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:clickable">true</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>


  <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="android:colorBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="style_title_screeen" parent="@style/Widget.MaterialComponents.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:textSize">@dimen/text_size22</item>
    <item name="android:textColor">#2C2C2E</item>
    <item name="android:lineSpacingExtra">2sp</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="android:textAppearance">@style/Text500</item>
    <item name="android:ellipsize">end</item>
    <item name="android:gravity">start</item>
    <item name="android:maxLines">1</item>
    <item name="fontWeight">500</item>
    <item name="android:fontWeight">500</item>
    <item name="android:textFontWeight" tools:targetApi="p">500</item>
  </style>

  <style name="AnimationContentFont">
    <item name="android:textSize">@dimen/dimen9</item>
    <item name="fontFamily">@font/roboto_light</item>
  </style>


  <style name="BottomSheetCustomDialog" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/styleBottomSheet</item>
  </style>

  <style name="styleBottomSheet" parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="styleCommonActiveButton">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:background">@drawable/border_button</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="styleDrawerHeaderProTitle">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="fontWeight">700</item>
    <item name="android:textFontWeight" >700</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="styleDrawerHeaderProDesc">
    <item name="android:textSize">@dimen/text_size_10</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="fontWeight">400</item>
    <item name="android:textFontWeight">400</item>
    <item name="android:textColor">@color/white</item>
  </style>
  <style name="AppTheme.Custom.Progress" parent="@style/Theme.AppCompat">
    <item name="colorAccent">@color/colorPrimary</item>
  </style>
</resources>