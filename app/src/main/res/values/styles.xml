<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/colorPrimary</item>
    <item name="colorSecondaryVariant">@color/colorPrimary</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
<!--    <item name="android:statusBarColor">@color/transparent</item>-->
    <!-- App Font -->
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowActionBarOverlay">true</item>
  </style>

  <style name="Theme.AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.NoActionBar" >
    <item name="android:windowLightStatusBar" >true</item>
    <item name="android:statusBarColor">@color/white</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimary</item>
  </style>

  <style name="TextBoldFont">
    <item name="android:textSize">@dimen/text_size16</item>
    <item name="android:textStyle">bold</item>
    <item name="fontFamily">@font/poppins_bold</item>
  </style>

  <style name="TextMediumFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/poppins_medium</item>
  </style>

  <style name="TextRegularFont">
    <item name="android:textSize">@dimen/text_size14</item>
    <item name="fontFamily">@font/poppins_light</item>
  </style>

  <style name="CustomDialogAnimation" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorPrimary">@color/colorPrimary</item>

    <item name="android:windowActivityTransitions">true</item>
  </style>

  <style name="CircleImageView">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">50%</item>
  </style>


  <style name="rounded_corner">
    <item name="cornerSize">@dimen/_8sdp</item>
  </style>
  <style name="styleContentFont">
    <item name="android:textSize">@dimen/tutorial_content</item>
    <item name="fontFamily">@font/roboto_regular</item>
  </style>
  <style name="styleDrawerHeader">
    <item name="fontWeight">700</item>
    <item name="android:textFontWeight" >700</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:textSize">@dimen/text_size_16</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>
  <style name="styleDrawerProIcon">
    <item name="cornerSize">@dimen/_4sdp</item>
  </style>

  <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:fontFamily">@font/roboto_bold</item>
    <item name="fontWeight">600</item>
    <item name="android:textFontWeight" >600</item>
    <item name="fontFamily">@font/roboto_medium</item>
    <item name="android:textSize">@dimen/text_size_18</item>
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
    <item name="colorControlNormal">@color/colorPrimary</item>
    <item name="titleTextAppearance">@style/TextAppearance.Toolbar.Title</item>
  </style>
</resources>