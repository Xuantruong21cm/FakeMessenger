<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FakeMessenger" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/color_f2f2f2</item>
        <item name="colorControlHighlight">@color/colorPrimary_10</item>
        <item name="colorAccent">@color/color_0084f0</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowTransition</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_0084f0</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="WindowTransition">
        <item name="android:activityOpenEnterAnimation">@anim/pull_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/push_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/pull_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/push_out_right</item>
    </style>
</resources>