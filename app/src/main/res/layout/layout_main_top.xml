<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_avatar"
        app:civ_border_color="@color/black_10"
        app:civ_border_width="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_12sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_default" />

    <androidx.appcompat.widget.AppCompatTextView
        app:layout_constraintBottom_toBottomOf="@+id/im_avatar"
        app:layout_constraintStart_toEndOf="@+id/im_avatar"
        app:layout_constraintTop_toTopOf="@+id/im_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/chat"
        android:textColor="@color/black"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/im_edit"
        app:layout_constraintBottom_toBottomOf="@+id/im_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/im_avatar"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_round_f1f1f1"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_pencil" />

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintBottom_toBottomOf="@+id/im_avatar"
        app:layout_constraintEnd_toStartOf="@+id/im_edit"
        app:layout_constraintTop_toTopOf="@+id/im_avatar"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/bg_round_f1f1f1"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_camera"
        android:tint="@color/black"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/im_avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:background="@drawable/bg_search"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:padding="@dimen/_7sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_search_24"
            android:tint="@color/color_717171" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/search"
            android:textColor="@color/color_717171"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>