<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_43sdp"
        android:layout_height="@dimen/_43sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/im_outline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_default" />

        <RelativeLayout
            android:id="@+id/ll_avatar_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_ava_group_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_user_default" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/im_ava_group_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_user_default"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_1sdp" />
        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_margin="@dimen/_1sdp"
            android:src="@drawable/bg_round_55c932"
            app:civ_border_color="@color/white"
            app:civ_border_width="@dimen/_2sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:maxWidth="@dimen/_150sdp"
                android:singleLine="true"
                android:textColor="@color/black_70"
                android:textSize="@dimen/_11sdp"
                tools:text="dasdkjadjaldjlasdkadasdadadadasdadasdasddasdasdadsasdad" />

            <TextView
                android:id="@+id/tv_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_70"
                android:textSize="@dimen/_11sdp"
                tools:text="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_status"
        android:layout_width="@dimen/_9sdp"
        android:layout_height="@dimen/_9sdp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_round_0084f0" />
</LinearLayout>